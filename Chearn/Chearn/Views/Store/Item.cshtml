
@model Chearn.Models.ShopItem

@{
    ViewBag.Title = "Course";
}

<h1>Catalog Item</h1>

<div class="container">
    <div class="row">
        <div class="col-4 qa-area">
            <h2>@Model.Name</h2><br />
            <h3>$@Model.OriginalPrice</h3>
        </div>
        <div class="col-4"></div>
        <div class="col-4 qa-area">
            <a href="#" class="btn btn-block btn-dark flex-grow-0 flex-fill"><h2>Get</h2></a>
        </div>
        <div class="col qa-area">
            @Model.Description
            @if (ViewBag.includedCourses != null && ViewBag.includedCourses.Length > 0)
            {
                <br /><br /><br />
                <p>
                    This item includes the following courses:
                    <ul>
                        @foreach (Chearn.Models.Cours course in ViewBag.includedCourses)
                        {
                            <li>
                                @course.Name
                            </li>
                        }
                    </ul>
                </p>
            }
        </div>
    </div>
</div>