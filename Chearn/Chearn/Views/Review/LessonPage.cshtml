@model Chearn.Models.Lesson

@{
    ViewBag.Title = $"Lesson - {Model.Title}";
}

<div class="card" style="width:28em">
    <div class="card-title">
        <h2>Lesson - @Model.Title</h2>
    </div>
    <div class="card-body">
        <p class="card-text">
            @Model.MaterialA
        </p>
        <p class="card-text">
            @Model.MaterialB
        </p>

        <a class="btn" href="/Review/QuizPage/?lessonID=@Model.ID"> Go To Quiz </a>
    </div>

</div>
<hr>

 
<div class="card" style="width:28em">
        
        <input type="hidden" id="txtUrl" style="width:300px" value="@Model.VideoLink" />
        
        <h6> Video Source:
               
                <a href="@Model.VideoLink" style="align-content:center">Go to Lesson link</a>
        </h6>
        
    <input type="button" id="btnPlay" value="Play Lesson Video"style="align-self:auto"/>
        <hr />
        <iframe id="video" width="420" height="315" frameborder="0" style="display:none" allowfullscreen></iframe>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
        $("body").on("click", "#btnPlay", function () {
            var url = $("#txtUrl").val();
            url = url.split('v=')[1];
            $("#video")[0].src = "//www.youtube.com/embed/" + url;
            $("#video").show();
        });
        </script>
   
</div> 

<div class="card" style="width:28em">
    <iframe src="@Model.ImageLink" width="420" height="315" frameborder="0" id="ImageLink" />
</div>


