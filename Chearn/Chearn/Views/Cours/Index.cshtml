@model IEnumerable<Chearn.Models.Cours>

@{
    ViewBag.Title = "Manage Courses";
}

<h2>Manage Courses</h2>

<button class="cn-icon">
    <h5>
        @Html.ActionLink("Add a new Course", "Create")
    </h5>
</button>

<div class="card-deck">
    @foreach (var course in Model)
    {
        <div class="card course" style="max-width:20em">
            <div class="card-body">
                <h5 class="card-title">@course.Name</h5>
                <hr />
                <button class="cn-icon"><a href="@Url.Action("Info", "Cours", new { id = course.ID })"><img src="~/Content/icons/eye.svg" width="24" height="24" alt="Delete" title="Info" /></a></button>
                <button class="cn-icon"><a href="@Url.Action("Edit", "Cours", new { id = @course.ID })"><img src="~/Content/icons/pencil.svg" alt="Edit" width="24" height="24" title="Edit" /></a></button>
                <button class="cn-icon"><a href="@Url.Action("Delete", "Cours", new { id = @course.ID })"><img src="~/Content/icons/trash.svg" width="24" height="24" alt="Delete" title="Delete" /></a></button>
                <button class="cn-icon"><a href="@Url.Action("CourseShare", "Cours", new { id = course.ID })"><img src="~/Content/icons/plus.svg" width="24" height="24" alt="Delete" title="CourseShare" /></a></button>
                <button class="cn-icon"><a href="@Url.Action("Remove", "Cours", new { id = course.ID })"><img src="~/Content/icons/minus.svg" width="24" height="24" title="Remove" /></a></button>
            </div>
        </div>
    }
</div>
