@model Chearn.Models.Cours

@{
    ViewBag.Title = "Student Course";
}
    

<data id="CourseID" value="@ViewBag.CourseID"></data>

<div class="text-danger" id="warningMessage"></div>




    <h2>@Model.Name</h2>
    <div class="container">
        <h5>Your progress in the course </h5>
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:@ViewBag.Rate%">
                @ViewBag.rate%
            </div>
        </div>
    </div>
    


<br>


<div class="row">
    <div class="col-md-4">
        <h4> Lesson Index</h4>
        <div style="width:18em">
            <div id="resultRow" style="max-height:80em;  overflow-y:scroll;">
                <input class="form-control" id="lessonSearchbar" type="search" />
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="col-md-9" style="padding-left: 0px; padding-right: 0px">
            <div class="ui-menu cnavbar" style="margin-left:4px;width:60em">
                <h3>Heirarchical relation between lessons in @Model.Name</h3>
                <div class="row" style="margin-left: 4px">

                </div>
            </div>
            <div id="cy">

            </div>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/cytoscape/3.14.0/cytoscape.min.js")
@Scripts.Render("https://cdn.jsdelivr.net/npm/cytoscape-edgehandles@3.6.0/cytoscape-edgehandles.min.js")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.js")

@Scripts.Render("~/Scripts/PageLogic/StudentCourse.js")
@Scripts.Render("~/Scripts/PageLogic/StudentGraph.js")







