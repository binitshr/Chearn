@model IEnumerable<Chearn.Models.Cours>

@{
    ViewBag.Title = "ValidationList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Class Processing</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "ListOfLessons", new { id = item.ID })
            </td>
        </tr>
    }
</table>

